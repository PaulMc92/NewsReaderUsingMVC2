@model NewsReader.Models.ArticleModels

<div class="modal-body modal-content">
    <div class="modal-header">
        <h4 class="modal-title">@Html.DisplayFor(model => model.Title)</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
            <div class="panel-left">
                @Html.DisplayFor(model => model.Author)
            </div>
            <div class="panel-right">
                @Html.DisplayFor(model => model.PublishedAt)
            </div>
        <br />
        <div class="row">
            <div class="col-sm-4 ">
                <img src="@Model.URLToImage" class="img-responsive"/>
            </div>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
                <br />
                <br />
                <a href=@Model.URL>Read more here</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>